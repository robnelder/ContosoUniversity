@model ContosoUniversity.ViewModels.CourseWithHelp

@{
    ViewBag.Title = "Edit";
}

<h2>Edit @Html.DisplayHelp(Model.ContextHelps) </h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Course</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Course.CourseID)

        <div class="form-group">
            <div class="col-md-2 text-right control-label">
                <strong>
                    @Html.DisplayNameWithHelpFor(model => model.Course.CourseID, Model.ContextHelps)
                </strong>
            </div> 
            <div class="col-md-10">
                @Html.DisplayFor(model => model.Course.CourseID)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-2 text-right control-label">
                <strong>
                    @Html.DisplayNameWithHelpFor(model => model.Course.Title, Model.ContextHelps)
                </strong>
            </div> 
            <div class="col-md-10">
                @Html.EditorFor(model => model.Course.Title, new { htmlAttributes = new { @class = "form-control" } })                
                @Html.ValidationMessageFor(model => model.Course.Title, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-2 text-right control-label">
                <strong>
                    @Html.DisplayNameWithHelpFor(model => model.Course.Credits, Model.ContextHelps)
                </strong>
            </div>           
            <div class="col-md-10">                
                @Html.EditorFor(model => model.Course.Credits, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Course.Credits, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-2 text-right control-label">
                <strong>
                    @Html.DisplayNameWithHelpFor(model => model.Course.Department, Model.ContextHelps)
                </strong>
            </div> 
            <div class="col-md-10">
                @Html.DropDownList("DepartmentID", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Course.DepartmentID, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
