@model ContosoUniversity.ViewModels.ContextHelpWithHelp

@{
    ViewBag.Title = "Create";
}

<h2>Create @Html.DisplayHelp(Model.ContextHelps) </h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>ContextHelp</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <div class="col-md-2 text-right control-label">
                <strong>
                    @Html.DisplayNameWithHelpFor(model => model.ContextHelp.Controller, Model.ContextHelps)
                </strong>
            </div> 
            <div class="col-md-10">
                @Html.EditorFor(model => model.ContextHelp.Controller, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.ContextHelp.Controller, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-2 text-right control-label">
                <strong>
                    @Html.DisplayNameWithHelpFor(model => model.ContextHelp.Action, Model.ContextHelps)
                </strong>
            </div> 
            <div class="col-md-10">
                @Html.EditorFor(model => model.ContextHelp.Action, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.ContextHelp.Action, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-2 text-right control-label">
                <strong>
                    @Html.DisplayNameWithHelpFor(model => model.ContextHelp.Property, Model.ContextHelps)
                </strong>
            </div> 
            <div class="col-md-10">
                @Html.EditorFor(model => model.ContextHelp.Property, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.ContextHelp.Property, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-2 text-right control-label">
                <strong>
                    @Html.DisplayNameWithHelpFor(model => model.ContextHelp.Tooltip, Model.ContextHelps)
                </strong>
            </div> 
            <div class="col-md-10">
                @Html.EditorFor(model => model.ContextHelp.Tooltip, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.ContextHelp.Tooltip, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-2 text-right control-label">
                <strong>
                    @Html.DisplayNameWithHelpFor(model => model.ContextHelp.HelpText, Model.ContextHelps)
                </strong>
            </div> 
            <div class="col-md-10">
                @Html.TextAreaFor(model => model.ContextHelp.HelpText, new { @rows = "10", @class = "form-control" })
                @Html.ValidationMessageFor(model => model.ContextHelp.HelpText, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to " + Model.ContextHelp.Controller + " List", "Index", Model.ContextHelp.Controller)
    |
    @Html.ActionLink("Go to Context Help List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
